<div class="author">
    <h1 class=author__heading>Hi, I am Simachew. </h1>
    <p class="author__body">A Web Developer and Software Engineer</p>
</div>

<img src="/img/hero-image.webp" alt="Hero Image" class="hero-image" width="981" height="528">

<section class="article">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

       <% blogs.forEach(blog => { %> 
        <li>
            <a href="details/<%= blog._id %>">
                <span><%= blog.title %></span>
                <span class="article-list__date"><%= blog.createdAt %></span>
            </a>
        </li>
       <% }); %> 

    </ul>
    <% if (previousPage!==null) { %>
        <a href="/?page=<%= previousPage %>" class="pagination">&lt;Previous Page</a>
    <% } %>
    <% if (nextPage!==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">Next Page &gt;</a>
    <% } %>

</section>